BoxLayout:
    orientation: "vertical"
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: "horizontal"
        spacing: 10

        TextInput:
            id: input_number
            text: "7"
            font_size: 48
            multiline: False

        Button:
            text: "Square"
            font_size: 32
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            text: ""
            font_size: 48
            color: (1, 0.4, 0.7, 1)  # pink colour

    Label:
        text: 'Enter a number and press "Square"'
        font_size: 20
        color: (1, 1, 1, 1)
